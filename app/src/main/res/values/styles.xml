<resources>

    <style name="TextField" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextField.Header6">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextField.Header5">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="TextField.Header4">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="TextField.Subtitle1">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextField.Body1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextField.Body2">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextField.White" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextField.Header">
        <item name="android:textSize">@dimen/size_header_text</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="TextField.Header.Black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size_header_text</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="TextField.Popup">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/size_popup_text</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/background_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/size_button_text</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="Button.Secondary">
        <item name="android:background">@drawable/background_secondary_button</item>
        <item name="android:textColor">@color/vibrant_blue</item>
    </style>

    <style name="TextField.ListItem" />

    <style name="TextField.ListItem.Product">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_marginStart">@dimen/margin_product_text</item>
        <item name="android:layout_marginEnd">@dimen/margin_product_text</item>
        <item name="android:layout_marginTop">@dimen/margin_product_text</item>
    </style>

    <style name="TextField.ListItem.Product.Title">
        <item name="android:textAppearance">@style/TextField.Subtitle1</item>
    </style>

    <style name="TextField.ListItem.Product.Badge">
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:textAppearance">@style/TextField.Body2</item>
    </style>

    <style name="TextField.ListItem.Product.OldPrice">
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:textAppearance">@style/TextField.Body2</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="TextField.ListItem.Product.CurrentPrice">
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:textAppearance">@style/TextField.Body2</item>
    </style>

    <style name="TextField.ListItem.Filter">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_marginStart">@dimen/margin_filter_text</item>
        <item name="android:layout_marginEnd">@dimen/margin_filter_text</item>
        <item name="android:layout_marginTop">@dimen/margin_filter_text</item>
    </style>

    <style name="TextField.ListItem.Filter.Title">
        <item name="android:textAppearance">@style/TextField.Subtitle1</item>
    </style>

    <style name="TextField.ListItem.Filter.SelectedItem">
        <item name="android:textAppearance">@style/TextField.Body1</item>
        <item name="android:textColor">@android:color/holo_green_dark</item>
    </style>

</resources>
